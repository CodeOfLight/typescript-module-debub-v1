    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "ts-node launch",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "${workspaceRoot}/../helpers/**/*.js"
            ],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../helpers/**",
                "!**/node_modules/**"
            ]
        }
    ]
}